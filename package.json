{
  "name": "root",
  "private": true,
  "repository": "https://github.com/cenk1cenk2/boilerplate-oclif",
  "scripts": {
    "ls": "lerna la",
    "clean": "lerna clean -y && rimraf node_modules yarn.lock",
    "exec": "lerna exec --stream",
    "command": "lerna run --stream",
    "scripts:link": "./scripts/link-packages.sh link",
    "scripts:unlink": "./scripts/link-packages.sh unlink",
    "scripts:workspace:link": "./scripts/link-packages-to-workspace.sh link",
    "scripts:workspace:unlink": "./scripts/link-packages-to-workspace.sh unlink",
    "docs:toc": "markdown-toc README.md --bullets='-' -i && yarn command --no-bail docs:toc"
  },
  "workspaces": [
    "packages/*"
  ],
  "simple-git-hooks": {
    "pre-commit": "yarn command lint:staged --concurrency 1",
    "prepare-commit-msg": "[ -t 1 ] && exec < /dev/tty && git cz --hook || true"
  },
  "devDependencies": {
    "@cenk1cenk2/cz-cc": "^1.4.9",
    "@cenk1cenk2/eslint-config": "^1.0.5",
    "commitizen": "^4.2.4",
    "eslint": "^8.1.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.2.4",
    "markdown-toc": "^1.2.0",
    "prettier": "^2.4.1",
    "simple-git-hooks": "^2.7.0",
    "tsc-watch": "^4.5.0",
    "tscpaths": "^0.0.9",
    "typescript": "^4.4.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@cenk1cenk2/cz-cc"
    }
  }
}
