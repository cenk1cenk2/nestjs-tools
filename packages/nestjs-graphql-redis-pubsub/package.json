{
  "name": "@cenk1cenk2/nestjs-graphql-redis-pubsub",
  "version": "1.0.0",
  "description": "Pubsub manager for redis for graphql subscriptions.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": "https://github.com/cenk1cenk2/nestjs-tools",
  "author": {
    "name": "Cenk Kilic",
    "email": "cenk@kilic.dev",
    "url": "https://srcs.kilic.dev"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prebuild": "rimraf tsconfig*.tsbuildinfo && rimraf dist/",
    "build": "tsc -p tsconfig.build.json",
    "postbuild": " tsconfig-replace-paths --project tsconfig.json",
    "dev:start": "yarn prebuild && tsc-watch --noClear --onSuccess \"yarn postbuild\"",
    "lint": "prettier --write src/ --loglevel warn && eslint --ext .ts,.js,.tsx,.jsx --fix src/",
    "lint:check": "eslint --ext .ts,.js,.tsx,.jsx src/",
    "lint:staged": "lint-staged",
    "docs:toc": "markdown-toc README.md --bullets='-' -i"
  },
  "peerDependencies": {
    "@nestjs/common": ">= 7.6.1 < 9",
    "graphql-redis-subscriptions": ">= 2.4.0",
    "@webundsoehne/nestjs-util": ">= 2.3.2",
    "ioredis": ">= 4.27.9",
    "graphql-subscriptions": ">= 2.0.0"
  },
  "devDependencies": {
    "graphql-redis-subscriptions": "^2.4.2",
    "ioredis": "^4.28.5",
    "@nestjs/common": "^8.4.0",
    "@types/ioredis": "^4.28.8",
    "@webundsoehne/nestjs-util": "^5.3.0",
    "graphql-subscriptions": "^2.0.0"
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx}": [
      "prettier --loglevel warn --write",
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --loglevel warn --write"
    ]
  }
}
